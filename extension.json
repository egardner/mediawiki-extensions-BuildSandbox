{
	"name": "BuildSandbox",
	"author": [
		"Your Name"
	],
	"url": "https://www.mediawiki.org/wiki/Extension:BuildSandbox",
	"descriptionmsg": "buildsandbox-desc",
	"license-name": "GPL-2.0-or-later",
	"type": "other",
	"requires": {
		"MediaWiki": ">= 1.35.0"
	},
	"AutoloadNamespaces": {
		"MediaWiki\\Extension\\BuildSandbox\\": "includes/"
	},
	"config": {
		"BuildSandboxDevelopmentMode": {
			"description": "Whether development mode is enabled for the extension",
			"value":  false
		}
	},
	"HookHandlers": {
		"BuildSandboxHooks": {
			"class": "MediaWiki\\Extension\\BuildSandbox\\Hooks"
		}
	},
	"MessagesDirs": {
		"BuildSandbox": [
			"i18n"
		]
	},
	"ResourceFileModulePaths": {
		"localBasePath": "resources",
		"remoteExtPath": "BuildSandbox/resources"
	},
	"ResourceModules": {
		"ext.buildSandbox.main": {
			"dependencies": [
				"vue"
			],
			"messages": [
				"buildsandbox-title"
			],
			"styles": [ "dist/ext.buildSandbox.style.css" ],
			"packageFiles": [
				"src/mw-wrapper.js",
				{
					"name": "dist/ext.buildSandbox.main.js",
					"callback": "MediaWiki\\Extension\\BuildSandbox\\Hooks::devModeCallback",
					"callbackParam": [
						"dist/ext.buildSandbox.main.js",
						"http://localhost:3000",
						"main.js"
					]
				},
				{
					"name": "src/config.json",
					"config": [ "BuildSandboxDevelopmentMode" ]
				}
			],
			"es6": true
		}
	},
	"SpecialPages": {
		"BuildSandbox": "MediaWiki\\Extension\\BuildSandbox\\SpecialBuildSandbox"
	},
	"ExtensionMessagesFiles": {
		"BuildSandboxAlias": "BuildSandbox.alias.php"
	},
	"manifest_version": 2
}
